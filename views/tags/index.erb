<h2>Category Manager</h2>

<div id="transactionsbuttons">
  <form action="/tags/new" method="GET">
    <button class="button" type ="submit" style="vertical-align:middle"><span>Add new category </span></button>
  </form>
</div>

<table id="transactions">
  <tr>
    <th>Category name:</th>
    <th></th>
    <th></th>
  </tr>
  <% @tags.each do |tag| %>
  <tr>
    <td>
      <%= tag.name %>
    </td>
    <td>
      <form action="/tags/<%= tag.id %>/edit" method="GET">
        <input class="button-table-edit" type="submit" value="edit" />
      </form>
    </td>
    <td>
      <form action="/tags/<%= tag.id %>/delete" method="POST">
        <input class="button-table-delete" type="submit" value="delete" />
      </form>
    </td>
  </tr>
  <% end %>
</table>
