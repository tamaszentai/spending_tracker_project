<h3>Transactions</h3>
<div class="transactionsbuttons">
  <button class="button" style="vertical-align:middle"><span>Add New Transaction </span></button>
  <button class="button" style="vertical-align:middle"><span>Delete All </span></button>
</div>

<form method="post" action="/transactions">
  <label for="merchant-select">
    Select a merchant:
    <select name="merchant_id">
      <% for merchant in @merchants %>
      <option value="<%= merchant.id %>"><%= merchant.name %></option>
      <% end %>
    </select>
  </label>

  <label for="tag-select">
    Select a tag:
    <select name="tag_id">
      <% for tag in @tags %>
      <option value="<%= tag.id %>"><%= tag.name %></option>
      <% end %>
    </select>
  </label>
  <label for="amount-field">Amount:</label>
  <input
  type="text"
  name="amount"
  id="amount-field"
  />
  <input type="submit" value="Add new transaction">
</form>
<br>
<br>
<br>
<div class="table">


<table id="transactions">
  <tr>
    <th>TOTAL SPENT:</th>
    <th>£<%= @total%></th>
  </tr>
  <tr>
    <th>Merchant</th>
    <th>Tag</th>
    <th>Amount</th>
    <th></th>
    <th></th>
  </tr>
<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.merchant.name %></td>
    <td><%= transaction.tag.name %></td>
    <td> £<%= transaction.amount %></td>
    <td>
      <form action="/transactions/<%= transaction.id %>/edit" method="GET">
        <input class="button-table" type="submit" value="edit" />
      </form>
    </td>
    <td>
      <form action="/transactions/<%= transaction.id %>/delete" method="POST">
        <input class="button-table" type="submit" value="delete" />
      </form>
    </td>
  </tr>
  <% end %>
</table>
</div>
